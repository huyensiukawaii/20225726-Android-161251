<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgDetail"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="Ảnh chi tiết sinh viên" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Họ và Tên"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="Icon ID"
                    android:tint="#757575"/>

                <TextView
                    android:id="@+id/tvDetailMssv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MSSV: ---"
                    android:textSize="18sp"
                    android:textColor="#424242" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_day"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="Icon Date"
                    android:tint="#757575"/>

                <TextView
                    android:id="@+id/tvDetailDob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh: ---"
                    android:textSize="18sp"
                    android:textColor="#424242" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/sym_action_email"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="Icon Email"
                    android:tint="#757575"/>

                <TextView
                    android:id="@+id/tvDetailEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: ---"
                    android:textSize="18sp"
                    android:textColor="#1565C0"
                    android:autoLink="email" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>